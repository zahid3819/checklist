# Neon Postgres (recommended)
# - DATABASE_URL should be the pooled connection string (host contains "-pooler")
# - Add pgbouncer=true when using the pooler
DATABASE_URL="postgresql://USER:PASSWORD@ep-xxxxxx-pooler.REGION.aws.neon.tech/DB?sslmode=require&pgbouncer=true"

# Prisma migrations should use the direct (non-pooler) connection string
DIRECT_URL="postgresql://USER:PASSWORD@ep-xxxxxx.REGION.aws.neon.tech/DB?sslmode=require"

# NextAuth
NEXTAUTH_SECRET="replace-with-a-long-random-string"
NEXTAUTH_URL="http://localhost:3000"
